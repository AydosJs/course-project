generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
    id           Int      @id @default(autoincrement())
    name         String
    email        String   @unique
    password     String
    registeredAt DateTime @default(now())
    updatedAt    DateTime @updatedAt
    isAdmin      Boolean  @default(false)
}

model Collection {
    id           Int      @id @default(autoincrement())
    name         String
    topic        String
    description  String
    ownerId      Int
    publishedAt  DateTime @default(now())
    cover        String
    customFields Json
}

model Comment {
    id        Int      @id @default(autoincrement())
    userId    Int
    date      DateTime
    text      String
    likeCount Int

    collectionId Int?
    itemId       Int?
}

model Like {
    id           Int      @id @default(autoincrement())
    likedAt      DateTime
    userId       Int
    commentId    Int
    itemId       Int
    collectionId Int
}

model Item {
    id          Int      @id @default(autoincrement())
    name        String
    description String
    publishedAt DateTime @default(now())
    cover       String
    likeCount   Int
    tags        String[]

    collectionId Int
}
